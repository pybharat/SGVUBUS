<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/size_20sp"
        app:cardCornerRadius="@dimen/size_30sp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/size_60sp"
            android:paddingTop="@dimen/size_15sp"
            android:paddingRight="@dimen/size_60sp">

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_20sp"
                    android:gravity="center"
                    android:text="Enter OTP"
                    android:textColor="@color/custom_black"
                    android:textSize="@dimen/small_text_size" />

                <TextView
                    android:id="@+id/mobile_no_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/custom_black"
                    android:textSize="@dimen/small_text_size"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_60sp"
                    android:layout_marginTop="@dimen/size_10sp"
                    android:layout_marginBottom="@dimen/size_5sp"
                    android:background="@color/white"
                    app:cardCornerRadius="@dimen/size_8sp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/size_15sp"
                        android:paddingTop="@dimen/size_5sp"
                        android:paddingRight="@dimen/size_15sp"
                        android:paddingBottom="@dimen/size_5sp">

                        <EditText
                            android:id="@+id/otp_no_1"

                            android:layout_width="@dimen/size_30sp"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="2.5dip"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="1"
                            android:textColor="@color/custom_black"
                            android:textSize="@dimen/small_medium_text_size" />

                        <EditText
                            android:id="@+id/otp_no_2"
                            android:layout_width="@dimen/size_30sp"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="2.5dip"
                            android:layout_marginRight="2.5dip"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="1"
                            android:textColor="@color/custom_black"
                            android:textSize="@dimen/small_medium_text_size" />

                        <EditText
                            android:id="@+id/otp_no_3"
                            android:layout_width="@dimen/size_30sp"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="2.5dip"
                            android:layout_marginRight="2.5dip"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="1"
                            android:textColor="@color/custom_black"
                            android:textSize="@dimen/small_medium_text_size" />

                        <EditText
                            android:id="@+id/otp_no_4"
                            android:layout_width="@dimen/size_30sp"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="2.5dip"
                            android:layout_marginRight="2.5dip"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="1"
                            android:textColor="@color/custom_black"
                            android:textSize="@dimen/small_medium_text_size" />

                        <EditText
                            android:id="@+id/otp_no_5"
                            android:layout_width="@dimen/size_30sp"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="2.5dip"
                            android:layout_marginRight="2.5dip"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="1"
                            android:textColor="@color/custom_black"
                            android:textSize="@dimen/small_medium_text_size" />

                        <EditText
                            android:id="@+id/otp_no_6"
                            android:layout_width="@dimen/size_30sp"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="2.5dip"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:maxLength="1"
                            android:textColor="@color/custom_black"
                            android:textSize="@dimen/small_medium_text_size" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll1"
                android:layout_marginTop="@dimen/size_5sp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/login3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Login" />

                    <ProgressBar
                        android:id="@+id/progress_bar"
                        android:layout_width="@dimen/size_25sp"
                        android:layout_height="@dimen/size_25sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/size_10sp" />

                    <TextView
                        android:id="@+id/duration_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/size_10sp"
                        android:text="time"
                        android:textSize="@dimen/small_text_size" />
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/notrec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/rl1"
                android:layout_marginTop="@dimen/size_10sp"
                android:gravity="center"
                android:text="Did you not receive OTP" />

            <TextView
                android:id="@+id/resend_otp_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notrec"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/size_8sp"
                android:gravity="center"
                android:text="Resend OTP"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/small_medium_text_size"
                android:visibility="invisible" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>