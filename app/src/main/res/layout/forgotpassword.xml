<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/size_30sp"
    android:layout_margin="@dimen/size_10sp"
    android:elevation="@dimen/size_20sp">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shadowDy="10"
        android:shadowDx="10"
        android:shadowRadius="30"
        android:shadowColor="@color/grey_text"
        android:text="Forgot Password"
        android:textColor="@color/navi_blue"
        android:textSize="@dimen/size_30sp"
        android:textStyle="bold"
        android:fontFamily="@font/black"
        android:gravity="center"
        android:layout_marginTop="@dimen/size_20sp"
        />


    <EditText
        android:id="@+id/email12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_75sp"
        android:layout_marginLeft="@dimen/size_10sp"
        android:layout_marginRight="@dimen/size_10sp"
        android:shadowDx="10"
        android:shadowDy="10"
        android:background="@drawable/border"
        android:shadowColor="@color/light_grey"
        android:shadowRadius="20"
        android:padding="15dp"
        android:gravity="center_vertical"
        android:hint="E-Mail/Mobile"
        />

    <Button
        android:id="@+id/otp1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_50sp"
        android:layout_marginTop="@dimen/size_160sp"
        android:layout_marginRight="@dimen/size_50sp"
        android:layout_marginBottom="@dimen/size_30sp"
        android:background="@drawable/btn"
        android:backgroundTint="@color/navi_blue"
        android:text="Send OTP"
        android:shadowDy="10"
        android:shadowDx="10"
        android:shadowRadius="15"
        android:shadowColor="@color/black"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

</androidx.cardview.widget.CardView>
</RelativeLayout>