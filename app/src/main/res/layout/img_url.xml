<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_160sp"
    android:layout_margin="@dimen/size_8sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/size_2sp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="@dimen/size_30sp"
                app:cardCornerRadius="@dimen/size_5sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/size_10sp"
                    android:padding="@dimen/size_10sp"
                    android:layout_marginRight="@dimen/size_8sp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/img_url"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_60sp"
                        android:src="@drawable/gyanviharnewlogo" />
                    <TextView
                        android:id="@+id/notice_til"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/black"
                        android:gravity="center_horizontal"
                        android:justificationMode="inter_word"
                        android:text="notification title"
                        android:textColor="@color/design_dark_default_color_on_primary"
                        android:textSize="@dimen/size_20sp" />



                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>